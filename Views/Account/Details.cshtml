@model Web_UI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container py-5">
    <div class=" row">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == Web_UI.Entity.EnumOrderState.Waiting)
                    {
                        <badge class="badge badge-warning">Bekleniyor</badge>
                    }else if(Model.OrderState == Web_UI.Entity.EnumOrderState.Completed)
	                {
                        <badge class="badge badge-success">Sipariş Tamamlandı</badge>
	                }
                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    <i class="fas fa-lira-sign"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>


                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>

                                <th style="width:45%;">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width:10%;"></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Upload/@item.Image" width="70" />
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        <i class="fas fa-lira-sign"></i>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">Product Details</a>
                                    </td>


                                </tr>

                            }


                        </tbody>
                    </table>
                </dd>

            </dl>

        </div>
    </div>
</div>

