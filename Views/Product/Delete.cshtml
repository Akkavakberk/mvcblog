@model Web_UI.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-5">
    <h2>Ürün Sil</h2>
    <hr />
    <div class="alert alert-danger" role="alert">Ürünü silmek istediğinizden emin misiniz?</div>
    <div>
    
        <dl class="dl-horizontal">
                    

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

         
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-primary" /> 
                @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        }
    </div>
